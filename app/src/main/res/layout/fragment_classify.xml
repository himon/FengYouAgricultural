<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.louis.agricultural.ui.fragment.tab.ClassifyFragment">

    <include layout="@layout/layout_classify_title_bar" />

    <include layout="@layout/layout_gray_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/listview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/home_tab_gray_bg"
            android:divider="@null"></ListView>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <com.louis.agricultural.utils.HeaderGridView
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/home_tab_gray_bg"
                android:columnWidth="90dp"
                android:horizontalSpacing="1dp"
                android:numColumns="2"
                android:stretchMode="columnWidth"
                android:verticalSpacing="1dp"></com.louis.agricultural.utils.HeaderGridView>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
