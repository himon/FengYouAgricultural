<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar"/>

    <include layout="@layout/layout_gray_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:text="订单号 13025060088"
            android:textColor="@color/home_tab_font_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/address_button_green"
            android:padding="3dp"
            android:text="交易成功"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_12"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/home_tab_gray_bg"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_express"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/img_express_icon"/>

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="7dp"
            android:src="@drawable/img_right_arrow"/>

        <TextView
            android:id="@+id/tv_express"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_arrow"
            android:layout_toRightOf="@+id/iv_express"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="【上海市】已签收,签收人是欧阳慧,感谢使用申通快递,期待再次为您服务"
            android:textColor="@color/home_tab_font_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_express"
            android:layout_marginTop="12dp"
            android:layout_toLeftOf="@+id/iv_arrow"
            android:layout_toRightOf="@+id/iv_express"
            android:text="2016-01-11 10:20:15"
            android:textColor="@color/main_search_font_gray"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/home_tab_gray_bg"/>

    <RelativeLayout
        android:id="@+id/rl_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/img_confirm_order_head"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_head"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/iv_head"
            android:text="欧阳慧"
            android:textColor="@color/home_tab_font_black"/>

        <ImageView
            android:id="@+id/iv_mobile"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/tv_name"
            android:src="@drawable/img_confirm_order_mobile"/>

        <TextView
            android:id="@+id/tv_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_mobile"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/iv_mobile"
            android:text="15844556677"
            android:textColor="@color/home_tab_font_black"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_head"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/tv_type"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="上海市浦东区长青路578弄6号602室"
            android:textColor="@color/main_search_font_gray"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:src="@drawable/img_confirm_order_line"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/home_tab_gray_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:background="@color/textview_orange_bg"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="logo"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_12"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:text="丰友"
            android:textColor="@color/home_tab_font_black"/>

    </LinearLayout>

    <include layout="@layout/layout_gray_line"/>

</LinearLayout>
