<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.louis.agricultural.ui.activity.account.RegisterActivity">

    <include layout="@layout/layout_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15dp">

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="请输入用户名"
                    android:textColorHint="@color/radio_group_gray_bg" />

                <ImageView
                    android:id="@+id/iv_name"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/img_no_check_mark" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_name_error_prompt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="right|center_vertical"
                android:textColor="@color/home_tab_red_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15dp">

                <EditText
                    android:id="@+id/et_mobile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="请输入手机号码"
                    android:inputType="phone"
                    android:textColorHint="@color/radio_group_gray_bg" />

                <ImageView
                    android:id="@+id/iv_mobile"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/img_no_check_mark" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_mobile_error_prompt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="right|center_vertical"
                android:textColor="@color/home_tab_red_bg" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15dp">

                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="请输入推荐码"
                    android:textColorHint="@color/radio_group_gray_bg" />

                <ImageView
                    android:id="@+id/iv_code"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/img_no_check_mark" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_code_error_prompt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="right|center_vertical"
                android:textColor="@color/home_tab_red_bg" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15dp">

                <EditText
                    android:id="@+id/et_pwd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="你输入密码"
                    android:inputType="textPassword"
                    android:textColorHint="@color/radio_group_gray_bg" />

                <ImageView
                    android:id="@+id/iv_pwd"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/img_no_check_mark" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_pwd_error_prompt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="right|center_vertical"
                android:textColor="@color/home_tab_red_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15dp">

                <EditText
                    android:id="@+id/et_repwd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="请确认密码"
                    android:inputType="textPassword"
                    android:textColorHint="@color/radio_group_gray_bg" />

                <ImageView
                    android:id="@+id/iv_repwd"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/img_no_check_mark" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_repwd_error_prompt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="right|center_vertical"
                android:textColor="@color/home_tab_red_bg" />

            <Button
                android:id="@+id/btn_next_step"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/button_yellow_bg"
                android:padding="15dp"
                android:text="提交注册"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size_18" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
