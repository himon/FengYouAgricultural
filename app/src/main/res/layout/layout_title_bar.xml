<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tools_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tools_bar_height"
                android:background="@android:color/white"
                android:paddingRight="10dp">

    <RelativeLayout
        android:id="@+id/rl_nav_left"
        android:layout_width="@dimen/tools_bar_height"
        android:layout_height="@dimen/tools_bar_height">

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_nav_left"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/img_back"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_nav_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="@dimen/font_size_18"/>

    <TextView
        android:id="@+id/tv_nav_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_nav_right"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/img_detail"
        android:visibility="gone"/>
</RelativeLayout>