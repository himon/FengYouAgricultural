<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.louis.agricultural.ui.activity.me.ConfirmOrderActivity">

    <include layout="@layout/layout_title_bar" />

    <include layout="@layout/layout_gray_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/img_confirm_order_head" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_head"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@+id/iv_head"
                    android:text="欧阳慧"
                    android:textColor="@color/home_tab_font_black" />

                <ImageView
                    android:id="@+id/iv_mobile"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_toRightOf="@+id/tv_name"
                    android:src="@drawable/img_confirm_order_mobile" />

                <TextView
                    android:id="@+id/tv_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_mobile"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@+id/iv_mobile"
                    android:text="15844556677"
                    android:textColor="@color/home_tab_font_black" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_head"
                    android:layout_marginTop="15dp"
                    android:background="@color/textview_orange_bg"
                    android:paddingBottom="3dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="3dp"
                    android:text="默认"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_size_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_type"
                    android:layout_below="@+id/iv_head"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/tv_type"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="上海市浦东区长青路578弄6号602室"
                    android:textColor="@color/main_search_font_gray" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/img_right_arrow" />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:src="@drawable/img_confirm_order_line" />

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/home_tab_gray_bg" />

            <com.louis.agricultural.view.MyListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:divider="@color/gray_line4"
                android:dividerHeight="1dp"
                android:scrollbars="none"></com.louis.agricultural.view.MyListView>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/home_tab_gray_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付方式"
                    android:textColor="@color/home_tab_font_black"
                    android:textSize="@dimen/font_size_18" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_confirm_order_radio_group"
                        android:button="@null"
                        android:checked="true"
                        android:padding="6dp"
                        android:text="在线支付"
                        android:textColor="@android:color/white" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/selector_confirm_order_radio_group"
                        android:button="@null"
                        android:padding="6dp"
                        android:text="货到付款"
                        android:textColor="@android:color/white" />

                </RadioGroup>

            </LinearLayout>

            <include layout="@layout/layout_gray_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配送方式"
                    android:textColor="@color/home_tab_font_black"
                    android:textSize="@dimen/font_size_18" />

                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_confirm_order_radio_group"
                        android:button="@null"
                        android:checked="true"
                        android:padding="6dp"
                        android:text="快递"
                        android:textColor="@android:color/white" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/selector_confirm_order_radio_group"
                        android:button="@null"
                        android:padding="6dp"
                        android:text="平邮"
                        android:textColor="@android:color/white" />

                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥10"
                    android:textColor="@color/home_tab_red_bg" />

            </LinearLayout>

            <include layout="@layout/layout_gray_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优惠券"
                    android:textColor="@color/home_tab_font_black"
                    android:textSize="@dimen/font_size_18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@color/textview_orange_bg"
                    android:paddingBottom="3dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="3dp"
                    android:text="2 张可用"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_size_12" />

            </LinearLayout>

            <include layout="@layout/layout_gray_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp">

                <CheckBox
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:checked="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:background="@color/home_tab_red_bg"
                    android:padding="6dp"
                    android:text="满 100 减 5"
                    android:textColor="@android:color/white" />

                <CheckBox
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:background="@color/radio_group_gray_bg"
                    android:padding="6dp"
                    android:text="满 100 减 3"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <include layout="@layout/layout_gray_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/home_tab_gray_bg"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="还需支付：￥569.00"
                    android:textColor="@color/home_tab_red_bg" />

                <Button
                    android:id="@+id/btn_buy"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_radius_button_red_bg"
                    android:gravity="center"
                    android:text="立即购买"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_size_14" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
