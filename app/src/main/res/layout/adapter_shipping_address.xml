<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="80dp"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:padding="8dp">

    <CheckBox
        android:id="@+id/cb_check"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="10dp"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欧阳慧"
            android:textColor="@color/home_tab_font_black"/>

        <TextView
            android:id="@+id/tv_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_name"
            android:text="15844738964"
            android:textColor="@color/home_tab_font_black"/>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="30dp"
            android:layout_height="15dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_mobile"
            android:background="@color/orange"
            android:text="默认"
            android:visibility="gone"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_10"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="7dp"
            android:text="上海市浦东新区长青路579弄6号602室"
            android:textColor="@color/main_search_font_gray"/>

    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/gray_line4"/>

    <ImageView
        android:id="@+id/iv_edit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/img_edit_address"/>

</LinearLayout>