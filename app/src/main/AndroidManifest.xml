<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.louis.agricultural" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".base.app.FYApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="design_width"
            android:value="640" />
        <meta-data
            android:name="design_height"
            android:value="1136" />

        <activity
            android:name=".ui.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.account.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".ui.activity.ProductDetailsActivity"
            android:label="@string/title_activity_product_details" />
        <activity
            android:name=".ui.activity.me.UserInfoActivity"
            android:label="@string/title_activity_user_info"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.activity.me.SettingActivity"
            android:label="@string/title_activity_setting" />
        <activity
            android:name=".ui.activity.me.UpdatePasswordActivity"
            android:label="@string/title_activity_update_password" />
        <activity
            android:name=".ui.activity.me.MyOrderActivity"
            android:label="@string/title_activity_my_order" />
        <activity
            android:name=".ui.activity.me.ShippingAddressActivity"
            android:label="@string/title_activity_shipping_address" />
        <activity
            android:name=".ui.activity.me.AddShippingAddressActivity"
            android:label="@string/title_activity_add_shipping_address" />
        <activity
            android:name=".ui.activity.me.ConfirmOrderActivity"
            android:label="@string/title_activity_confirm_order" />
        <activity
            android:name=".ui.activity.account.ForgetPasswordActivity"
            android:label="@string/title_activity_forget_password"
            android:theme="@style/AppTheme" />
        <activity android:name=".ui.activity.account.ForgetPasswordNextActivity" />
        <activity android:name=".ui.activity.account.RegisterActivity" />
        <activity android:name=".ui.activity.me.CommentActivity" />
        <activity
            android:name=".ui.activity.MessageActivity"
            android:label="@string/title_activity_message" >
        </activity>
        <activity
            android:name=".ui.activity.me.PayActivity"
            android:label="@string/title_activity_pay" >
        </activity>
        <activity
            android:name=".ui.activity.SearchActivity"
            android:label="@string/title_activity_search" >
        </activity>
    </application>

</manifest>
